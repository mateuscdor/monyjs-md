{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "experimentalDecorators": true,
      "allowJs": false,
      "checkJs": false,
      "strict": false,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "lib": ["es2020", "esnext.array", "DOM"]
    },
    "exclude": ["node_modules"],
}